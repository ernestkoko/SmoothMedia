<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/permissionFragment">
    <action android:id="@+id/action_global_audio_fragment"
        app:destination="@id/homeScreen"
        app:launchSingleTop="true"/>

    <fragment
        android:id="@+id/homeScreen"
        android:name="com.koko.smoothmedia.screens.homepage.tablayoutitems.audio.AudioFragment"
        android:label="fragment_home_screen"
        tools:layout="@layout/fragment_home_screen" />
    <fragment
        android:id="@+id/homePage"
        android:name="com.koko.smoothmedia.screens.homepage.HomePageFragment"
        android:label="fragment_home_page"
        tools:layout="@layout/fragment_home_page" />
    <fragment
        android:id="@+id/permissionFragment"
        android:name="com.koko.smoothmedia.PermissionFragment"
        android:label="fragment_permission"
        tools:layout="@layout/fragment_permission" >
        <action
            android:id="@+id/action_permissionFragment_to_homePage"
            app:destination="@id/homePage" />
    </fragment>
</navigation>